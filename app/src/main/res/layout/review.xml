<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtPackage"
        style="@style/labelTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tourPackage" />

    <LinearLayout
        android:layout_marginHorizontal="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/overall"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hotel_24"
            android:background="@color/button_theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ten"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/overallRating"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/forty"
            android:contentDescription="@string/rate"
            android:numStars="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:theme="@style/MyAppTheme.RatingBar" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/accommodationRating"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/forty"
            android:contentDescription="@string/rate"
            android:numStars="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:theme="@style/MyAppTheme.RatingBar" />
    </LinearLayout>


        <LinearLayout
            android:layout_marginHorizontal="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tansport_24"
                android:background="@color/button_theme"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fastfood_24"
                android:background="@color/button_theme"/></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ten"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/travelRating"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/forty"
            android:contentDescription="@string/rate"
            android:numStars="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:theme="@style/MyAppTheme.RatingBar" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/foodRating"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/forty"
            android:contentDescription="@string/rate"
            android:numStars="5"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:theme="@style/MyAppTheme.RatingBar" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvReview"
        style="@style/listTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:text="@string/description"/></LinearLayout>

    <LinearLayout
        android:id="@+id/llPublish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llEdit"
            android:layout_marginLeft="@dimen/ten"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/edit" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llDelete"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAuthor"
            style="@style/subTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/username" />

        <TextView
            android:id="@+id/txtDate"
            style="@style/subTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/posted" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAction"
        android:layout_marginLeft="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLikes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_likes_24"/>

        <TextView
            android:id="@+id/txtLikesCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/likes" />

        <ImageView
            android:id="@+id/ivDislikes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dislike_24"/>

        <TextView
            android:id="@+id/txtDislikeCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/dislikes" />

        <LinearLayout
            android:id="@+id/llReply"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_reply_24"/>

        <TextView
            android:id="@+id/txtReply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/reply" /></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reply"
            android:padding="@dimen/twenty"
            android:text=""
            android:layout_marginVertical="@dimen/ten"
            android:layout_marginLeft="@dimen/fifty"
            android:layout_marginRight="@dimen/ten"/>

    </LinearLayout>
</LinearLayout>