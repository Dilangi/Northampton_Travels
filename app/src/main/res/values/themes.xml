    <style name="fieldTxt">
        <item name="android:textSize">@dimen/px_fifty</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop" tools:targetApi="o">@dimen/twenty</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/fifty</item>
        <item name="android:padding">@dimen/twenty</item>
    </style>

    <style name="inputTxt">
        <item name="android:textSize">@dimen/px_fifty</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/twenty</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/fifty</item>
        <item name="android:padding">@dimen/twenty</item>
    </style>

    <style name="navigateButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/px_fifty</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/fifty</item>
        <item name="android:layout_marginTop" tools:targetApi="o">@dimen/twenty</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/fifty</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/twenty</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_btn_navigate</item>
    </style>

    <style name="subButton">
        <item name="android:textSize">@dimen/px_fifty</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/fifty</item>
        <item name="android:padding">@dimen/twenty</item>
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
    </style>


</resources>